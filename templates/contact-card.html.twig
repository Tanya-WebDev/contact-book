    <div class="row d-flex justify-content-center">
        <div class="col-6">
            <table class="table table-info table-striped">
                <thead>
                <tr>
                    <th scope="col">Column name</th>
                    <th scope="col">Value</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>id</td>
                    <td>{{ id }}</td>
                </tr>
                <tr>
